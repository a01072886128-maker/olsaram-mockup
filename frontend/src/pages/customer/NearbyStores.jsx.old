/**
 * 내 주변 맛집 찾기 - 위치 기반 맛집 탐색
 *
 * 위치 권한 요청 → GPS 위치 → 맛집 검색 → 리스트/지도 뷰
 */

import { useState, useEffect } from 'react';
import { Link, useNavigate } from 'react-router-dom';
import { motion } from 'framer-motion';
import {
  MapPin,
  Star,
  Clock,
  LogOut,
  Loader2,
  MapPinned,
  List,
  SlidersHorizontal,
  TrendingUp,
  Search,
  Home,
} from 'lucide-react';
import { Card, CardContent } from '../../components/ui/card';
import { Button } from '../../components/ui/button';
import { Badge } from '../../components/ui/badge';
import { Dialog, DialogHeader, DialogTitle, DialogDescription, DialogFooter } from '../../components/ui/dialog';
import { Input } from '../../components/ui/input';
import { Alert, AlertDescription } from '../../components/ui/alert';
import { useAuth } from '../../contexts/AuthContext';
import { storeAPI } from '../../services/store';

const DEFAULT_LOCATION = {
  lat: 35.1495,
  lng: 126.9173,
  name: '광주 금남로',
};

function NearbyStores() {
  console.log('🚀 NearbyStores 컴포넌트 렌더링 시작');
  const navigate = useNavigate();
  const { user, logout } = useAuth();
  console.log('👤 현재 사용자:', user);

  // 상태 관리
  const [step, setStep] = useState('initial'); // 'initial', 'requesting', 'located', 'denied'
  const [location, setLocation] = useState(null);
  const [stores, setStores] = useState([]);
  const [isLoading, setIsLoading] = useState(false);
  const [error, setError] = useState(null);

  // 필터 & 정렬
  const [radiusFilter, setRadiusFilter] = useState(3000); // 3km 기본
  const [sortBy, setSortBy] = useState('distance'); // 'distance', 'rating', 'popularity'
  const [viewMode, setViewMode] = useState('list'); // 'list' or 'map'
  const [searchQuery, setSearchQuery] = useState('');

  // 모달
  const [showPermissionModal, setShowPermissionModal] = useState(false);
  const [showDeniedModal, setShowDeniedModal] = useState(false);

  // 페이지 진입 시 위치 권한 모달 표시
  useEffect(() => {
    console.log('🔍 NearbyStores 페이지 마운트, step:', step);
    setShowPermissionModal(true);
  }, []); // 빈 배열: 컴포넌트 마운트 시 1회만 실행

  // 위치 권한 허용
  const handleAllowLocation = () => {
    setShowPermissionModal(false);
    setStep('requesting');
    setIsLoading(true);

    if (!navigator.geolocation) {
      console.error('❌ Geolocation API 미지원');
      setError('이 브라우저는 위치 서비스를 지원하지 않습니다.');
      setStep('denied');
      setShowDeniedModal(true);
      setIsLoading(false);
      return;
    }

    console.log('📍 Geolocation API 호출 중...');
    navigator.geolocation.getCurrentPosition(
      (position) => {
        const { latitude, longitude } = position.coords;
        console.log('✅ 위치 획득 성공:', latitude, longitude);
        setLocation({ lat: latitude, lng: longitude, name: '현재 위치' });
        setStep('located');
        fetchNearbyStores(latitude, longitude, radiusFilter);
      },
      (error) => {
        console.error('❌ 위치 권한 오류:', error);
        setError('위치 권한이 거부되었습니다.');
        setStep('denied');
        setShowDeniedModal(true);
        setIsLoading(false);
      },
      {
        enableHighAccuracy: false,
        timeout: 10000,
        maximumAge: 0
      }
    );
  };

  // 위치 권한 나중에
  const handleDenyLocation = () => {
    setShowPermissionModal(false);
    setStep('denied');
    setShowDeniedModal(true);
  };

  // 주소 직접 입력
  const handleManualAddress = () => {
    setShowDeniedModal(false);
    alert('주소 검색 기능은 곧 제공될 예정입니다.');
  };

  // 기본 위치(광주 금남로)로 검색
  const handleUseDefaultLocation = () => {
    setShowDeniedModal(false);
    setLocation(DEFAULT_LOCATION);
    setStep('located');
    fetchNearbyStores(DEFAULT_LOCATION.lat, DEFAULT_LOCATION.lng, radiusFilter);
  };

  // 인기 맛집 보기
  const handleViewPopular = () => {
    setShowDeniedModal(false);
    setLocation({ lat: null, lng: null, name: '인기 맛집' });
    setStep('located');
    fetchPopularStores();
  };

  // 내 주변 맛집 검색
  const fetchNearbyStores = async (lat, lng, radius) => {
    try {
      setIsLoading(true);
      setError(null);
      const data = await storeAPI.getNearbyStores(lat, lng, radius);
      setStores(data.stores || data || []);
    } catch (err) {
      console.error('맛집 검색 오류:', err);
      setError(err.message || '맛집을 불러오는데 실패했습니다.');
      setStores([]);
    } finally {
      setIsLoading(false);
    }
  };

  // 인기 맛집 검색 (위치 없이)
  const fetchPopularStores = async () => {
    try {
      setIsLoading(true);
      setError(null);
      const data = await storeAPI.getNearbyStores(DEFAULT_LOCATION.lat, DEFAULT_LOCATION.lng, 10000);
      const sorted = (data.stores || data || []).sort((a, b) => (b.rating || 0) - (a.rating || 0));
      setStores(sorted);
    } catch (err) {
      console.error('인기 맛집 검색 오류:', err);
      setError(err.message || '맛집을 불러오는데 실패했습니다.');
      setStores([]);
    } finally {
      setIsLoading(false);
    }
  };

  // 반경 필터 변경
  const handleRadiusChange = (newRadius) => {
    setRadiusFilter(newRadius);
    if (location && location.lat && location.lng) {
      fetchNearbyStores(location.lat, location.lng, newRadius);
    }
  };

  // 정렬된 맛집 목록
  const getSortedStores = () => {
    let filtered = [...stores];

    // 검색 필터
    if (searchQuery) {
      filtered = filtered.filter(store =>
        store.name?.toLowerCase().includes(searchQuery.toLowerCase()) ||
        store.category?.toLowerCase().includes(searchQuery.toLowerCase())
      );
    }

    // 정렬
    filtered.sort((a, b) => {
      if (sortBy === 'distance') {
        return (a.distance || 999) - (b.distance || 999);
      } else if (sortBy === 'rating') {
        return (b.rating || 0) - (a.rating || 0);
      } else if (sortBy === 'popularity') {
        return (b.reviewCount || 0) - (a.reviewCount || 0);
      }
      return 0;
    });

    return filtered;
  };

  const handleLogout = () => {
    logout();
    navigate('/', { replace: true });
  };

  const sortedStores = getSortedStores();

  return (
    <div className="min-h-screen bg-slate-50">
      {/* Header */}
      <header className="sticky top-0 z-50 border-b bg-white shadow-sm">
        <div className="container mx-auto px-6 h-16 flex items-center justify-between">
          <div className="flex items-center gap-8">
            <Link to="/" className="text-xl font-bold text-slate-900 hover:text-blue-600 transition-colors">
              올사람
            </Link>
            <nav className="hidden md:flex gap-6">
              <Link to="/customer/search" className="text-sm text-slate-600 hover:text-slate-900 transition-colors">
                가게 검색
              </Link>
              <Link to="/customer/nearby" className="text-sm text-slate-900 font-semibold border-b-2 border-blue-600 pb-4">
                내 주변 맛집
              </Link>
              <Link to="/customer/mypage" className="text-sm text-slate-600 hover:text-slate-900 transition-colors">
                마이페이지
              </Link>
            </nav>
          </div>
          <div className="flex items-center gap-3">
            <span className="text-sm text-slate-600">{user?.name || '고객'}님</span>
            <Button variant="outline" size="sm" onClick={handleLogout}>
              <LogOut className="w-4 h-4 mr-1" />
              로그아웃
            </Button>
          </div>
        </div>
      </header>

      <main className="container mx-auto px-6 py-6">
        {/* 위치 권한 요청 모달 */}
        <Dialog open={showPermissionModal} onClose={() => {}}>
          <DialogHeader>
            <div className="flex justify-center mb-4">
              <div className="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center">
                <MapPin className="w-8 h-8 text-blue-600" />
              </div>
            </div>
            <DialogTitle className="text-center">내 주변 맛집을 찾아드립니다</DialogTitle>
            <DialogDescription className="text-center">
              현재 위치를 기반으로 가까운 맛집을 추천해드립니다.
              <br />
              위치 권한을 허용해주세요.
            </DialogDescription>
          </DialogHeader>
          <DialogFooter className="flex-col sm:flex-row gap-2">
            <Button variant="outline" onClick={handleDenyLocation} className="w-full sm:w-auto">
              나중에
            </Button>
            <Button onClick={handleAllowLocation} className="w-full sm:w-auto bg-blue-600 hover:bg-blue-700">
              <MapPin className="w-4 h-4 mr-2" />
              허용하기
            </Button>
          </DialogFooter>
        </Dialog>

        {/* 권한 거부 대안 모달 */}
        <Dialog open={showDeniedModal} onClose={() => setShowDeniedModal(false)}>
          <DialogHeader>
            <DialogTitle>다른 방법으로 맛집 찾기</DialogTitle>
            <DialogDescription>
              위치 권한 없이도 맛집을 찾을 수 있습니다
            </DialogDescription>
          </DialogHeader>
          <div className="space-y-3 my-4">
            <Button
              variant="outline"
              className="w-full justify-start h-auto py-4"
              onClick={handleUseDefaultLocation}
            >
              <Home className="w-5 h-5 mr-3 text-blue-600" />
              <div className="text-left">
                <div className="font-medium">기본 위치로 검색</div>
                <div className="text-xs text-slate-500">광주 금남로 기준</div>
              </div>
            </Button>
            <Button
              variant="outline"
              className="w-full justify-start h-auto py-4"
              onClick={handleManualAddress}
            >
              <Search className="w-5 h-5 mr-3 text-green-600" />
              <div className="text-left">
                <div className="font-medium">주소 직접 입력하기</div>
                <div className="text-xs text-slate-500">원하는 지역 검색</div>
              </div>
            </Button>
            <Button
              variant="outline"
              className="w-full justify-start h-auto py-4"
              onClick={handleViewPopular}
            >
              <TrendingUp className="w-5 h-5 mr-3 text-orange-600" />
              <div className="text-left">
                <div className="font-medium">인기 맛집 보기</div>
                <div className="text-xs text-slate-500">평점 높은 순</div>
              </div>
            </Button>
          </div>
          <div className="mt-6 p-4 bg-slate-50 rounded-lg">
            <p className="text-xs text-slate-600 font-medium mb-2">💡 위치 권한 설정 방법</p>
            <ol className="text-xs text-slate-500 space-y-1 list-decimal list-inside">
              <li>브라우저 주소창 왼쪽 자물쇠 아이콘 클릭</li>
              <li>사이트 설정 또는 권한 메뉴 선택</li>
              <li>위치 권한을 "허용"으로 변경</li>
              <li>페이지 새로고침</li>
            </ol>
          </div>
        </Dialog>

        {/* 로딩 중 */}
        {isLoading && step === 'requesting' && (
          <div className="flex flex-col items-center justify-center py-20">
            <Loader2 className="w-16 h-16 text-blue-600 animate-spin mb-4" />
            <p className="text-lg font-medium text-slate-700">주변 맛집을 찾고 있습니다...</p>
            <p className="text-sm text-slate-500 mt-2">잠시만 기다려주세요</p>
          </div>
        )}

        {/* 맛집 리스트 */}
        {step === 'located' && (
          <>
            {/* 현재 위치 & 필터 */}
            <div className="mb-6">
              <div className="flex items-center justify-between mb-4">
                <div className="flex items-center gap-2">
                  <MapPin className="w-5 h-5 text-blue-600" />
                  <span className="font-medium text-slate-900">{location?.name || '현재 위치'}</span>
                  <Badge variant="outline" className="ml-2">
                    {sortedStores.length}개 발견
                  </Badge>
                </div>
                <div className="flex items-center gap-2">
                  <Button
                    variant={viewMode === 'list' ? 'default' : 'outline'}
                    size="sm"
                    onClick={() => setViewMode('list')}
                  >
                    <List className="w-4 h-4" />
                  </Button>
                  <Button
                    variant={viewMode === 'map' ? 'default' : 'outline'}
                    size="sm"
                    onClick={() => setViewMode('map')}
                  >
                    <MapPinned className="w-4 h-4" />
                  </Button>
                </div>
              </div>

              {/* 검색바 */}
              <div className="mb-4">
                <Input
                  type="text"
                  placeholder="가게 이름이나 음식 종류로 검색..."
                  value={searchQuery}
                  onChange={(e) => setSearchQuery(e.target.value)}
                  className="w-full"
                />
              </div>

              {/* 필터 바 */}
              <div className="flex flex-wrap gap-3 items-center">
                <div className="flex items-center gap-2">
                  <SlidersHorizontal className="w-4 h-4 text-slate-400" />
                  <span className="text-sm text-slate-600">거리:</span>
                  {[1000, 3000, 5000, 10000].map((radius) => (
                    <Button
                      key={radius}
                      variant={radiusFilter === radius ? 'default' : 'outline'}
                      size="sm"
                      onClick={() => handleRadiusChange(radius)}
                    >
                      {radius >= 1000 ? `${radius / 1000}km` : `${radius}m`}
                    </Button>
                  ))}
                </div>

                <div className="flex items-center gap-2 ml-auto">
                  <span className="text-sm text-slate-600">정렬:</span>
                  <select
                    value={sortBy}
                    onChange={(e) => setSortBy(e.target.value)}
                    className="px-3 py-1.5 border border-slate-200 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
                  >
                    <option value="distance">가까운 순</option>
                    <option value="rating">평점 높은 순</option>
                    <option value="popularity">인기순</option>
                  </select>
                </div>
              </div>
            </div>

            {/* 에러 메시지 */}
            {error && (
              <Alert className="mb-6 border-orange-200 bg-orange-50">
                <AlertDescription className="text-orange-900">{error}</AlertDescription>
              </Alert>
            )}

            {/* 맛집 카드 그리드 (리스트 뷰) */}
            {viewMode === 'list' && (
              <>
                {isLoading ? (
                  <div className="flex justify-center py-12">
                    <Loader2 className="w-8 h-8 text-blue-600 animate-spin" />
                  </div>
                ) : sortedStores.length === 0 ? (
                  <div className="text-center py-12">
                    <MapPin className="w-16 h-16 text-slate-300 mx-auto mb-4" />
                    <p className="text-slate-600">주변에 맛집이 없습니다</p>
                    <p className="text-sm text-slate-400 mt-2">검색 반경을 늘려보세요</p>
                  </div>
                ) : (
                  <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    {sortedStores.map((store, index) => (
                      <motion.div
                        key={store.id}
                        initial={{ opacity: 0, y: 20 }}
                        animate={{ opacity: 1, y: 0 }}
                        transition={{ duration: 0.3, delay: index * 0.05 }}
                      >
                        <Card className="hover:shadow-lg transition-shadow cursor-pointer">
                          <CardContent className="p-4">
                            {/* 가게 이미지 */}
                            {store.imageUrl && (
                              <div className="w-full h-48 bg-slate-200 rounded-lg mb-4 overflow-hidden">
                                <img
                                  src={store.imageUrl}
                                  alt={store.name}
                                  className="w-full h-full object-cover"
                                />
                              </div>
                            )}

                            {/* 가게 정보 */}
                            <div className="space-y-2">
                              <div className="flex items-start justify-between">
                                <h3 className="font-semibold text-lg text-slate-900">{store.name}</h3>
                                {store.distance !== null && store.distance !== undefined && (
                                  <Badge variant="outline" className="text-xs">
                                    {store.distance < 1
                                      ? `${Math.round(store.distance * 1000)}m`
                                      : `${store.distance.toFixed(1)}km`}
                                  </Badge>
                                )}
                              </div>

                              <div className="flex items-center gap-1">
                                <Star className="w-4 h-4 text-yellow-500 fill-yellow-500" />
                                <span className="text-sm font-medium">{store.rating?.toFixed(1) || '0.0'}</span>
                                <span className="text-xs text-slate-400">
                                  ({store.reviewCount || 0})
                                </span>
                              </div>

                              <div className="flex items-center gap-2 text-sm text-slate-600">
                                <Badge variant="secondary">{store.category}</Badge>
                                {store.phone && (
                                  <span className="text-xs text-slate-400">{store.phone}</span>
                                )}
                              </div>

                              <p className="text-sm text-slate-500 line-clamp-2">
                                {store.address}
                              </p>

                              {/* 영업시간 */}
                              {store.businessHours && (
                                <div className="flex items-center gap-1 text-xs text-slate-500">
                                  <Clock className="w-3 h-3" />
                                  <span>
                                    {typeof store.businessHours === 'string'
                                      ? store.businessHours
                                      : '영업중'}
                                  </span>
                                </div>
                              )}

                              {/* 대표 메뉴 */}
                              {store.representativeMenus && store.representativeMenus.length > 0 && (
                                <div className="flex gap-1 flex-wrap">
                                  {store.representativeMenus.slice(0, 3).map((menu, idx) => (
                                    <Badge key={idx} variant="outline" className="text-xs">
                                      {menu}
                                    </Badge>
                                  ))}
                                </div>
                              )}

                              <Button className="w-full mt-3 bg-blue-600 hover:bg-blue-700">
                                상세보기
                              </Button>
                            </div>
                          </CardContent>
                        </Card>
                      </motion.div>
                    ))}
                  </div>
                )}
              </>
            )}

            {/* 지도 뷰 */}
            {viewMode === 'map' && (
              <div className="bg-white rounded-lg shadow-sm p-8 text-center">
                <MapPinned className="w-16 h-16 text-slate-300 mx-auto mb-4" />
                <p className="text-slate-600 mb-2">지도 뷰는 곧 제공될 예정입니다</p>
                <p className="text-sm text-slate-400">
                  현재는 리스트 뷰를 이용해주세요
                </p>
                <Button
                  variant="outline"
                  className="mt-4"
                  onClick={() => setViewMode('list')}
                >
                  <List className="w-4 h-4 mr-2" />
                  리스트 보기
                </Button>
              </div>
            )}
          </>
        )}
      </main>
    </div>
  );
}

export default NearbyStores;
